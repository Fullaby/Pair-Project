<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <body>
    <%- include('./partials/navbar')%>
    <div class="container">
      <h1 class="text-center">Edit Profile</h1>

      <form action="/edit-profile" class="edit-profile" method="post">

        <div class="form-group mb-3">
          <label class="label" for="firstName">First Name</label>
          <input type="text" class="form-control" placeholder="Your First Name" name="firstName" value="<%=user.Profile.firstName%>">
        </div>
        <div class="form-group mb-3">
          <label class="label" for="lastName">Last Name</label>
          <input type="text" class="form-control" placeholder="Your Last Name" name="lastName" value="<%=user.Profile.lastName%>">
        </div>
        <div class="form-group mb-3">
          <label class="label" for="profilePicture">Profile Picture</label>
          <input type="file" class="form-control" name="profilePicture" value="<%=user.Profile.profilePicture%>">
        </div>
        <div class="form-group mb-3">
          <label class="label" for="email">Email Address</label>
          <input type="email" class="form-control" name="email" value="<%=user.email%>">
        </div>
        <div class="form-group mb-3">
          <label class="label" for="phone">Phone Number</label>
          <input type="text" class="form-control" name="phone" value="<%=user.Profile.phone%>">
        </div>
        <div class="form-group mb-3">
          <label class="label" for="username">Username</label>
          <input type="text" class="form-control" name="username" value="<%=user.username%>">
        </div>
       <% const tipe= [true,false] %>
       <% tipe.forEach(el=>{ %>  
        <input type="radio" name="isPrivacy" value="<%= el %>" <%= el === user.Profile.isPrivacy ? 'checked' : '' %> ><%= el %> 
        <% }) %> 
        <div class="form-group">
          <button type="submit" class="form-control btn btn-primary submit px-3">Edit</button>
        </div>

      </form>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  </body>
</html>