<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <body>
    <%- include('./partials/navbar')%>
    <div class="container mt-5">
      <%posts.forEach(post => { %>
        <div class="row justify-content-center">
          <div class="card mb-3 col-md-6">
            <br>
            <p class="card-title"><b><%=post.User.username%></b></p>
            <img src="/images/<%=post.imageUrl%>" class="card-img-top" alt="post-image">
            <div class="card-body">
              <p class="card-title"><b><%=post.User.username%></b> <%=post.caption%></p>
              <%const tagList = post.Tags.map(tag => tag.name)%>
                <p class="card-text" style="font-size: 14px;">Tags: <%=tagList.join(",")%></p>
              <p class="card-text"><small class="text-muted"><%=createdAtFormatter(post.createdAt)%></small></p>
            </div>
          </div>
        </div>
        <%})%>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  </body>
</html>